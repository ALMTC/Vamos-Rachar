<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C48E6"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundGravity="center"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/logo"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/pessoas"
                tools:ignore="ContentDescription" />

            <EditText
                android:id="@+id/valor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="4"
                android:importantForAutofill="no"
                android:inputType="number|numberDecimal"
                android:textColor="#ECECEC"
                android:textColorHint="#ECECEC"
                android:textSize="72sp"
                tools:ignore="LabelFor" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/reais"
                tools:ignore="ContentDescription" />

            <EditText
                android:id="@+id/pessoas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="4"
                android:importantForAutofill="no"
                android:inputType="number"
                android:textColor="#ECECEC"
                android:textColorHint="#ECECEC"
                android:textSize="72sp"
                tools:ignore="LabelFor" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/falar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#323A66"
                android:clickable="true"
                android:contentDescription="@string/btfalar"
                android:elevation="8dp"
                android:focusable="true"
                android:scaleType="center"
                app:fabSize="auto"
                app:srcCompat="@drawable/falar"
                app:tint="#FFFFFF"
                app:useCompatPadding="true" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/resultado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="@string/r_0_00"
                android:textColor="#FFFFFF"
                android:textSize="80sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/compartilhar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#323A66"
                android:clickable="true"
                android:contentDescription="@string/btcomp"
                android:elevation="8dp"
                android:focusable="true"
                android:scaleType="fitXY"
                app:fabSize="auto"
                app:srcCompat="@drawable/share"
                app:tint="#FFFFFF"
                app:useCompatPadding="true" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>